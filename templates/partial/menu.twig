{% if menu %}
	<div class="menu--inner">
		<div class="inner--column">
			<ul class="primary--menu relative">
				{% for item in items %}
				<li class="{{ item.classes | join(' ') }} menu--item">
					<a class="cta nav-main-link menu-hover--submenu" {% if item.children %}data-submenu=".submenu-{{loop.index}}"{% endif %} {% if item.children %}href="javascript:void(0);"{% else %}href="{{ item.link }}"{% endif %}>
						{{ item.title }}
						{% if item.children %}
							<svg viewBox="0 0 8.121 13.414" class="arrow"><use xlink:href="{{ site.theme.link }}/dist/assets/icons/icons.svg#arrow" /></svg>
						{% endif %}
					</a>

					{% if item.children %}
						<ul class="primary--menu--children">
							{% for child in item.children %}
							<li {% if child.link == '#' %}class="is-label"{% endif %}>
								<a class="cta nav-main-link" href="{{ child.link }}">{{child.title}}</a>
							</li>
							{% endfor %}
						</ul>
					{% endif %}
				</li>
				{% endfor %}
			</ul>
		</div>

		<div class="inner--column align-top">
			{% for item in items %}
				{% if item.children %}
					<ul class="secondary--menu submenu-{{loop.index}}">
						{% for child in item.children %}
						<li {% if child.link == '#' %}class="is-label"{% endif %}>
							<a class="cta nav-main-link" href="{{ child.link }}">{{child.title}}</a>
						</li>
						{% endfor %}
					</ul>
				{% endif %}
			{% endfor %}
		</div>
	</div>
{% endif %}
